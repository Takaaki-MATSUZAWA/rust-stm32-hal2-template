{
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "tasks": [
        {
            "label": "Build project",
            "command": "wsl",
            "args": [
                "~/.cargo/bin/cargo",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Stop openOCD"
        },
        {
            "label": "Clean project",
            "command": "wsl",
            "args": [
                "~/.cargo/bin/cargo",
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Flash program",
            "command": "openocd.exe",
            "group": "none",
            "args": [
                "-f", 
                "flash.cfg",
                "-c",
                "\"flash_elf\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Stop openOCD",
            "command": "if(Get-Process -Name openocd -ErrorAction SilentlyContinue){taskkill /F /IM openocd.exe}"
        }
    ]
}